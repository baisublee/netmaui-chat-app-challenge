<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ChatApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ChatApp"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="Character Chatbot">

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate local:OnboardingWelcome}"
        Route="OnboardingWelcome" />

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate local:OnboardingSelectCharacter}"
        Route="OnboardingSelectCharacter" />

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
